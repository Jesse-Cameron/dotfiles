#!/usr/bin/env bash

# brew

alias bwi='brew install'
alias bw='brew'
alias bwu='brew update && brew upgrade'
alias bwd='brew doctor'
alias bws='brew services'

# git

alias gswm='git switch $(git default-branch)'

# sublime merge

alias smg='smerge -n .'

# tmux

alias tls='tmux ls'
alias tkas='tmux kill-session -a'
alias tkad='tmux list-sessions | grep -v attached | cut -d: -f1 |  xargs -t -n1 tmux kill-session -t'
alias t='tmux'
alias tssh='ssh [your server] -t "tmux -CC attach || tmux -CC"'

# docker

alias dksa='docker kill $(docker ps -q)'